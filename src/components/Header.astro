---
import settings from "../settings.js";
---
<header class="fixed w-full bg-primary text-white z-50">
  <div class="container mx-auto py-4 px-4 flex justify-between items-center">
    <div class="flex items-center">
      <a href="/" rel="noreferrer" class="flex items-center">
        <img src="/images/Logo.png" alt="Alltek Services Logo" class="h-10 mr-3" />
        <span class="text-xl font-bold">Alltek Services</span>
      </a>
    </div>

    <nav class="hidden md:flex items-center space-x-6">
      <a href="/" rel="noreferrer" class="hover:text-accent transition-colors">Home</a>
      <div class="relative group">
        <a href="/about" rel="noreferrer" class="hover:text-accent transition-colors flex items-center">
          About
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </a>
        <!-- About Dropdown -->
        <div id="about-dropdown" class="absolute left-0 mt-0 pt-6 hidden group-hover:block z-50 w-[900px] -ml-[300px]">
          <div class="bg-white shadow-2xl rounded-lg overflow-hidden border border-primary/20">
            <!-- Dropdown Header -->
            <div class="bg-primary/5 p-4 border-b border-primary/20">
              <h3 class="text-xl font-bold text-primary">About Alltek Services</h3>
              <p class="text-gray-600 text-sm">Learn more about our company, values, and commitment to excellence</p>
            </div>

            <div class="grid grid-cols-3 gap-0">
              <!-- About Us -->
              <div class="p-5 hover:bg-primary/5 transition-colors duration-300 border-r border-primary/10 group">
                <div class="flex items-center mb-4">
                  <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mr-3 group-hover:bg-primary/20 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  </div>
                  <h4 class="font-bold text-primary text-lg">
                    <a href="/about" rel="noreferrer" class="hover:text-accent transition-colors">About Us</a>
                  </h4>
                </div>
                <ul class="space-y-2 pl-3 border-l-2 border-primary/30">
                  <li><a href="/about" rel="noreferrer" class="text-gray-700 hover:text-accent transition-colors text-sm flex items-center"><span class="w-1.5 h-1.5 bg-primary rounded-full mr-2"></span>Our Story</a></li>
                  <li><a href="/about#mission" rel="noreferrer" class="text-gray-700 hover:text-accent transition-colors text-sm flex items-center"><span class="w-1.5 h-1.5 bg-primary rounded-full mr-2"></span>Mission & Values</a></li>
                  <li><a href="/about#team" rel="noreferrer" class="text-gray-700 hover:text-accent transition-colors text-sm flex items-center"><span class="w-1.5 h-1.5 bg-primary rounded-full mr-2"></span>Our Team</a></li>
                  <li><a href="/about#experience" rel="noreferrer" class="text-gray-700 hover:text-accent transition-colors text-sm flex items-center"><span class="w-1.5 h-1.5 bg-primary rounded-full mr-2"></span>30+ Years Experience</a></li>
                </ul>
              </div>

              <!-- Financing -->
              <div class="p-5 hover:bg-primary/5 transition-colors duration-300 border-r border-primary/10 group">
                <div class="flex items-center mb-4">
