---
import settings from "../settings.js";
interface Props {
	heading: string
	text: string
	button: string
}

const {heading, text, button} = Astro.props;
---

<section class="py-16 md:py-24 bg-primary text-white" id="CTA">
	<div class="container mx-auto px-4 text-center">
		<h2 class="text-3xl font-bold mb-6 font-heading uppercase">{heading}</h2>
		<p class="text-xl mb-8 max-w-3xl mx-auto">{text}</p>
		<div class="flex flex-col sm:flex-row justify-center gap-4">
			<a
				href="/contact"
				class="capitalize bg-accent hover:bg-accent/90 text-white font-bold py-3 px-8 rounded-md transition-colors"
			>
				{button}
			</a>
			<a
				href={`tel:${settings.phoneRaw}`}
				class="bg-secondary hover:bg-secondary/90 text-white font-bold py-3 px-8 rounded-md transition-colors"
			>
				Call {settings.phone}
			</a>
		</div>
	</div>
</section>
