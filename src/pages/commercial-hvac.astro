---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GoogleHead from "../components/GoogleHead.astro";
import PagesCTA from "../components/PagesCTA.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<link rel="icon" type="image/png" href="/images/Logo.png"/>
	<meta name="viewport" content="width=device-width"/>
	<meta name="generator" content={Astro.generator}/>

	<!-- Primary Meta Tags -->
	<title>Commercial HVAC Services in Belton, TX | Alltek Services</title>
	<meta name="title" content="Commercial HVAC Services in Belton, TX | Alltek Services"/>
	<meta name="description"
	      content="Expert heating and air conditioning services in Belton, TX including furnace repair, heat pump installation, HVAC maintenance, and emergency heating services. Stay warm and comfortable year-round."/>
	<meta name="keywords"
	      content="heating and air services Belton TX, furnace repair, heat pump installation, HVAC maintenance, emergency heating repair, heating system tune-up, central Texas heating, HVAC services"/>

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="https://www.alltek-services.com/heating-and-air/"/>
	<meta property="og:title" content="Commercial HVAC Services in Belton, TX | Alltek Services"/>
	<meta property="og:description"
	      content="Expert heating and air conditioning services in Belton, TX including furnace repair, heat pump installation, HVAC maintenance, and emergency heating services. Stay warm and comfortable year-round."/>
	<meta property="og:image"
	      content="https://www.alltek-services.com/images/optimized/heating-and-air/belton-tx-hvac-technician.webp"/>

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image"/>
	<meta property="twitter:url" content="https://www.alltek-services.com/heating-and-air/"/>
	<meta property="twitter:title" content="Commercial HVAC Services in Belton, TX | Alltek Services"/>
	<meta property="twitter:description"
	      content="Expert heating and air conditioning services in Belton, TX including furnace repair, heat pump installation, HVAC maintenance, and emergency heating services. Stay warm and comfortable year-round."/>
	<meta property="twitter:image"
	      content="https://www.alltek-services.com/images/optimized/heating-and-air/belton-tx-hvac-technician.webp"/>

	<!-- Canonical URL -->
	<link rel="canonical" href="https://www.alltek-services.com/heating-and-air/"/>

	<!-- Google Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link
		href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@400;500;600;700&display=swap"
		rel="stylesheet">

	<!-- Structured Data for Service -->
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Service",
			"name": "Commercial HVAC Services",
			"provider": {
				"@type": "HVACBusiness",
				"name": "Alltek Services",
				"address": {
					"@type": "PostalAddress",
					"streetAddress": "1181 FM-2271 Hwy",
					"addressLocality": "Belton",
					"addressRegion": "TX",
					"postalCode": "76513",
					"addressCountry": "US"
				},
				"telephone": "+1-254-721-7049",
				"image": "/images/Logo.png",
				"priceRange": "$$",
				"photo": [
					{
						"@type": "ImageObject",
						"url": "/images/optimized/heating-and-air/belton-tx-hvac-technician.webp",
						"caption": "Certified HVAC technician inspecting a heating and air conditioning system in Belton, TX"
					},
					{
						"@type": "ImageObject",
						"url": "/images/optimized/heating-and-air/belton-tx-home-hvac-system.webp",
						"caption": "Modern HVAC system installation in a Belton, TX home providing efficient heating and cooling"
					},
					{
						"@type": "ImageObject",
						"url": "/images/optimized/heating-and-air/belton-tx-hvac-maintenance.webp",
						"caption": "HVAC technician performing professional maintenance on heating system in Belton, TX home"
					}
				]
			},
			"areaServed": {
				"@type": "City",
				"name": "Belton",
				"sameAs": "https://en.wikipedia.org/wiki/Belton,_Texas"
			},
			"serviceType": "Commercial HVAC Services",
			"description": "Professional heating and air conditioning services including repair, installation, maintenance, and emergency services for residential and commercial properties in Belton and Central Texas.",
			"offers": {
				"@type": "Offer",
				"availability": "https://schema.org/InStock",
				"priceSpecification": {
					"@type": "PriceSpecification",
					"priceCurrency": "USD"
				}
			}
		}
	</script>

	<!-- Breadcrumb Schema -->
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "Home",
					"item": "https://www.alltek-services.com/"
				},
				{
					"@type": "ListItem",
					"position": 2,
					"name": "Services",
					"item": "https://www.alltek-services.com/services/"
				},
				{
					"@type": "ListItem",
					"position": 3,
					"name": "Commercial HVAC Services",
					"item": "https://www.alltek-services.com/heating-and-air/"
				}
			]
		}
	</script>
	<GoogleHead/>
</head>
<body class="bg-white">
<Header/>

<!-- Breadcrumbs -->
<div class="bg-lightgray py-3">
	<div class="container mx-auto px-4">
		<nav class="flex" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 md:space-x-3">
				<li class="inline-flex items-center">
					<a href="/" class="text-darkgray hover:text-accent inline-flex items-center">
						<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
						</svg>
						Home
					</a>
				</li>
				<li>
					<div class="flex items-center">
						<svg class="w-6 h-6 text-darkgray" fill="currentColor" viewBox="0 0 20 20"
						     xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd"
							      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
							      clip-rule="evenodd"></path>
						</svg>
						<a href="/services" class="text-darkgray hover:text-accent ml-1 md:ml-2">Services</a>
					</div>
				</li>
				<li aria-current="page">
					<div class="flex items-center">
						<svg class="w-6 h-6 text-darkgray" fill="currentColor" viewBox="0 0 20 20"
						     xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd"
							      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
							      clip-rule="evenodd"></path>
						</svg>
						<span class="text-accent font-medium ml-1 md:ml-2">Commercial HVAC Services</span>
					</div>
				</li>
			</ol>
		</nav>
	</div>
</div>

<main>
	<!-- Hero Section -->
	<section class="py-16 md:py-24 bg-primary text-white">
		<div class="container mx-auto px-4">
			<div class="text-center max-w-4xl mx-auto">
				<h1 class="text-4xl md:text-5xl font-bold mb-6 font-heading">COMMERCIAL HVAC SERVICES</h1>
				<p class="text-xl mb-8">Fully Certified Commercial HVAC Specialists in Bell County and the Central Texas area.</p>
			</div>
		</div>
	</section>

	<!-- Service Overview -->
	<section class="py-16 md:py-24 bg-white">
		<div class="container mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
				<div>
					<div class="flex items-center mb-4">
						<div class="w-10 h-1 bg-accent mr-4"></div>
						<h2 class="text-3xl font-bold text-primary font-heading">COMPREHENSIVE COMMERCIAL HVAC SOLUTIONS</h2>
					</div>
					<h3 class="text-xl font-semibold text-darkgray mb-6">
						RELIABLE HEATING AND COOLING FOR CENTRAL TEXAS
					</h3>
					<p class="text-darkgray mb-8">
						Alltek Services provides comprehensive services for commercial HVAC in Killeen and the surrounding areas. Our team of
						certified HVAC technicians works hard to ensure maximum indoor comfort and air quality for your employees and customers.
						We have all your commercial HVAC needs covered, from new equipment installation to repairs and maintenance.
					</p>
					<a
						href="/contact"
						class="inline-block bg-secondary hover:bg-secondary/90 text-white font-bold py-3 px-8 rounded-md transition-colors"
					>
						Get Free Estimate
					</a>
				</div>

				<div>
					<img
						src="/images/commercial-hvac-central-texas.jpg"
						alt="Certified HVAC technician inspecting a heating and air conditioning system in Belton, TX"
						class="rounded-lg shadow-xl w-full h-auto object-cover"
						width="600"
						height="400"
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Call to Action -->
	<PagesCTA
		heading="Need Heating or Air Conditioning Service?"
		text="Contact Alltek Services today for expert heating and air solutions in Belton and Central Texas."
		button="Schedule heating and air solutions"
	/>

</main>

<Footer/>

<script>
	// JavaScript for the page if needed
</script>
</body>
</html>
