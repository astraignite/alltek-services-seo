---
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';
import GoogleHead from "../../components/GoogleHead.astro";
import PagesCTA from "../../components/PagesCTA.astro";
import settings from "../../settings";

// Import the locations data
const locationsData = await import('../../data/service-areas/locations.json');
const locations = locationsData.default;

// Get Bell County for display
const bellCounty = locations.find(location => location.slug === 'bell-county');

// Separate primary locations (first 23 after Bell County) and additional areas (last 7)
const primaryLocations = locations.filter((location, index) =>
	location.slug !== 'bell-county' && index <= 23
);

const additionalAreas = locations.filter((location, index) =>
	location.slug !== 'bell-county' && index > 23
);

// All cities for schema
const cities = locations.filter(location => location.slug !== 'bell-county');

const ldLocalBusiness =
	{
		"@context": "https://schema.org",
		"@type": "HVACBusiness",
		"name": "Alltek Services",
		"image": "/images/Logo.png",
		"url": "https://www.alltek-services.com/service-areas/",
		"telephone": `${settings.phoneMainRaw}`,
		"address": {
			"@type": "PostalAddress",
			"streetAddress": "1181 FM-2271 Hwy",
			"addressLocality": "Belton",
			"addressRegion": "TX",
			"postalCode": "76513",
			"addressCountry": "US"
		}
	};
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<link rel="icon" type="image/png" href="/images/Logo.png"/>
	<meta name="viewport" content="width=device-width"/>
	<meta name="generator" content={Astro.generator}/>

	<!-- Primary Meta Tags -->
	<title>HVAC Service Areas | Alltek Services</title>
	<meta name="title" content="HVAC Service Areas | Alltek Services"/>
	<meta name="description"
	      content="Alltek Services provides professional HVAC services throughout Central Texas including Belton, Temple, Killeen, and surrounding areas. Find your location for specialized heating and cooling solutions."/>
	<meta name="keywords"
	      content="HVAC service areas, Belton TX HVAC, Temple TX HVAC, Killeen TX HVAC, Central Texas HVAC services, air conditioning service areas, heating service locations, HVAC near me, local HVAC company, Texas HVAC contractor"/>

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="https://www.alltek-services.com/service-areas/"/>
	<meta property="og:title" content="HVAC Service Areas | Alltek Services"/>
	<meta property="og:description"
	      content="Alltek Services provides professional HVAC services throughout Central Texas including Belton, Temple, Killeen, and surrounding areas. Find your location for specialized heating and cooling solutions."/>
	<meta property="og:image" content="https://www.alltek-services.com/images/optimized/fleet/service-fleet.webp"/>

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image"/>
	<meta property="twitter:url" content="https://www.alltek-services.com/service-areas/"/>
	<meta property="twitter:title" content="HVAC Service Areas | Alltek Services"/>
	<meta property="twitter:description"
	      content="Alltek Services provides professional HVAC services throughout Central Texas including Belton, Temple, Killeen, and surrounding areas. Find your location for specialized heating and cooling solutions."/>
	<meta property="twitter:image" content="https://www.alltek-services.com/images/optimized/fleet/service-fleet.webp"/>

	<!-- Canonical URL -->
	<link rel="canonical" href="https://www.alltek-services.com/service-areas/"/>

	<!-- Google Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link
		href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@400;500;600;700&display=swap"
		rel="stylesheet">

	<!-- Structured Data -->
	<script type="application/ld+json" set:html={JSON.stringify(ldLocalBusiness)}>

	</script>
	<GoogleHead/>
	<meta name="robots" content="nofollow"/>
</head>

<body class="bg-white">
<Header/>

<!-- Breadcrumbs -->
<div class="bg-lightgray py-3 relative z-10">
	<div class="container mx-auto px-4">
		<nav class="flex" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 md:space-x-3">
				<li class="inline-flex items-center">
					<a href="/" class="text-darkgray hover:text-accent inline-flex items-center">
						<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
						</svg>
						Home
					</a>
				</li>
				<li aria-current="page">
					<div class="flex items-center">
						<svg class="w-6 h-6 text-darkgray" fill="currentColor" viewBox="0 0 20 20"
						     xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd"
							      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
							      clip-rule="evenodd"></path>
						</svg>
						<span class="text-accent font-medium ml-1 md:ml-2">Service Areas</span>
					</div>
				</li>
			</ol>
		</nav>
	</div>
</div>

<main>
	<!-- Hero Section -->
	<section class="py-16 md:py-24 bg-primary text-white">
		<div class="container mx-auto px-4">
			<div class="text-center max-w-4xl mx-auto">
				<h1 class="text-4xl md:text-5xl font-bold mb-6 font-heading">OUR SERVICE AREAS</h1>
				<p class="text-xl mb-8">Providing exceptional HVAC services throughout Central Texas. Find your location for
					specialized heating and cooling solutions.</p>
			</div>
		</div>
	</section>

	<!-- Service Areas Overview -->
	<section class="py-16 md:py-24 bg-white">
		<div class="container mx-auto px-4">
			<div class="text-center mb-12">
				<div class="flex items-center justify-center mb-4">
					<div class="w-10 h-1 bg-accent mr-4"></div>
					<h2 class="text-3xl font-bold text-primary font-heading">COMMUNITIES WE SERVE</h2>
					<div class="w-10 h-1 bg-accent ml-4"></div>
				</div>
				<p class="text-lg text-darkgray max-w-3xl mx-auto">
					At Alltek Services, we're proud to provide comprehensive HVAC solutions to homes and businesses throughout
					Central Texas. Our service area extends to a 40-mile radius from our Belton office.
				</p>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
				<div>
					<img
						src="/images/optimized/fleet/service-fleet.webp"
						alt="Alltek Services HVAC Service Fleet in Central Texas"
						class="rounded-lg shadow-xl w-full h-auto object-cover mb-6"
						width="600"
						height="400"
					/>
					<h3 class="text-2xl font-bold text-primary mb-4">Our Commitment to Central Texas</h3>
					<p class="text-darkgray mb-4">
						For years, we've been the trusted HVAC partner for residents and businesses across Bell County and beyond.
						Our local expertise means we understand the unique climate challenges of Central Texas and can provide
						tailored solutions for your specific needs.
					</p>
				</div>

				<div>
					<div class="bg-lightgray p-8 rounded-lg shadow-md mb-8">
						<h3 class="text-2xl font-bold text-primary mb-6 text-center">Primary Locations</h3>
						{bellCounty && (
							<div class="mb-4 text-center">
                    <span class="text-primary font-bold text-lg">
                      {bellCounty.name}, {bellCounty.state}
                    </span>
							</div>
						)}
						<div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
							{primaryLocations.map(city => (
								<a href={`/service-areas/${city.slug}`} class="text-darkgray hover:text-accent font-medium">
									{city.name}, {city.state}
								</a>
							))}
						</div>
					</div>

					<div class="bg-lightgray p-8 rounded-lg shadow-md">
						<h3 class="text-2xl font-bold text-primary mb-6 text-center">Additional Areas</h3>
						<div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
							{additionalAreas.map(city => (
								<a href={`/service-areas/${city.slug}`} class="text-darkgray hover:text-accent font-medium">
									{city.name}, {city.state}
								</a>
							))}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Service Process Section -->
	<ServiceProcess/>

	<!-- Call to Action -->
	<PagesCTA
		heading="Ready for Professional HVAC Service?"
		text="Contact Alltek Services today to schedule a service appointment or to learn more about how we can help with your heating and cooling needs in your area."
		button="Call Us!"
	/>

</main>

<Footer/>
</body>
</html>
