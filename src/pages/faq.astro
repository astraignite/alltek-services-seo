---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceAreas from '../components/ServiceAreas.astro';
import GoogleHead from "../components/GoogleHead.astro";
import settings from "../settings.js";
import faqLd from "../data/mysite/faq-ld.json";
import faqWeb from "../data/mysite/faq-web.json";

const faqLD = JSON.parse(JSON.stringify(faqLd).replace(/PHONE_NUMBER/g, `${settings.phone}`));
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<link rel="icon" type="image/png" href="/images/Logo.png"/>
	<meta name="viewport" content="width=device-width"/>
	<meta name="generator" content={Astro.generator}/>

	<!-- Primary Meta Tags -->
	<title>Frequently Asked Questions | HVAC in Belton, TX</title>
	<meta name="title" content="Frequently Asked Questions | Alltek Services | HVAC in Belton, TX"/>
	<meta name="description"
	      content="Find answers to common questions about HVAC services, maintenance, installations, and more from Alltek Services, your trusted HVAC provider in Belton and Central Texas."/>
	<meta name="keywords"
	      content="HVAC FAQ, heating and cooling questions, air conditioning FAQ, furnace questions, HVAC maintenance FAQ, Belton TX HVAC, HVAC service questions, air quality FAQ"/>

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="https://www.alltek-services.com/faq/"/>
	<meta property="og:title" content="Frequently Asked Questions | Alltek Services | HVAC in Belton, TX"/>
	<meta property="og:description"
	      content="Find answers to common questions about HVAC services, maintenance, installations, and more from Alltek Services, your trusted HVAC provider in Belton and Central Texas."/>
	<meta property="og:image" content="https://www.alltek-services.com/images/fleet/service-fleet.jpg"/>

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image"/>
	<meta property="twitter:url" content="https://www.alltek-services.com/faq/"/>
	<meta property="twitter:title" content="Frequently Asked Questions | Alltek Services | HVAC in Belton, TX"/>
	<meta property="twitter:description"
	      content="Find answers to common questions about HVAC services, maintenance, installations, and more from Alltek Services, your trusted HVAC provider in Belton and Central Texas."/>
	<meta property="twitter:image" content="https://www.alltek-services.com/images/fleet/service-fleet.jpg"/>

	<!-- Canonical URL -->
	<link rel="canonical" href="https://www.alltek-services.com/faq/"/>

	<!-- Google Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link
		href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@400;500;600;700&display=swap"
		rel="stylesheet">

	<!-- Structured Data for FAQ Page -->
	<script type="application/ld+json" set:html={JSON.stringify(faqLD)}>
	</script>

	<!-- Breadcrumb Schema -->
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "Home",
					"item": "https://www.alltek-services.com/"
				},
				{
					"@type": "ListItem",
					"position": 2,
					"name": "FAQ",
					"item": "https://www.alltek-services.com/faq/"
				}
			]
		}
	</script>
	<GoogleHead/>
	<meta name="robots" content="nofollow">
</head>

<body class="bg-white">
<Header/>

<!-- Breadcrumbs -->
<div class="bg-lightgray py-3">
	<div class="container mx-auto px-4">
		<nav class="flex" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 md:space-x-3">
				<li class="inline-flex items-center">
					<a href="/" rel="noreferrer" class="text-darkgray hover:text-accent inline-flex items-center">
						<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
							<path
								d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
						</svg>
						Home
					</a>
				</li>
				<li aria-current="page">
					<div class="flex items-center">
						<svg class="w-6 h-6 text-darkgray" fill="currentColor" viewBox="0 0 20 20"
						     xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd"
							      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
							      clip-rule="evenodd"></path>
						</svg>
						<span class="text-accent font-medium ml-1 md:ml-2">FAQ</span>
					</div>
				</li>
			</ol>
		</nav>
	</div>
</div>

<main>
	<!-- Hero Section -->
	<section class="py-16 md:py-24 bg-primary text-white">
		<div class="container mx-auto px-4">
			<div class="text-center max-w-4xl mx-auto">
				<h1 class="text-4xl md:text-5xl font-bold mb-6 font-heading">FREQUENTLY ASKED QUESTIONS</h1>
				<p class="text-xl mb-8">Find answers to common questions about our HVAC services, maintenance, installations,
					and more.</p>
			</div>
		</div>
	</section>

	<!-- FAQ Categories Section -->
	<section class="py-12 bg-lightgray">
		<div class="container mx-auto px-4">
			<div class="flex flex-wrap justify-center gap-4">
				{Object.entries(faqWeb).map(([key, value]) => (
					<a href={`#${key}`}
					   class="bg-white px-6 py-3 rounded-full shadow-md hover:bg-accent hover:text-white transition-colors font-medium">
						{value.label}
					</a>
				))}
			</div>
		</div>
	</section>


	<!-- FAQ Masonry Layout -->
	<section class="py-16 md:py-24 bg-white">
		<div class="container mx-auto px-4">
			{Object.entries(faqWeb).map(([key, value]) => (
				<div id={key} class="mb-16">
					<div class="flex items-center mb-8">
						<div class="w-10 h-1 bg-accent mr-4"></div>
						<h2 class="text-3xl font-bold text-primary font-heading">{value.label}</h2>
					</div>
					<div class="masonry-grid">
						{value.sets.map((faq) => {
							let answer = faq.answer.replace(/PHONE_NUMBER/g, `<a class="text-red-700" href="tel:${settings.phoneRaw}">${settings.phone}</a>`);
							answer = answer.replace(/(contact\s+(?:us|form))/gi, `<a class="text-red-700" href="/contact">$1</a>`);
							return (
								<div class="masonry-item bg-lightgray p-6 rounded-lg shadow-md mb-6">
									<h3 class="text-xl font-bold text-primary mb-2">{faq.question}</h3>
									<p class="text-darkgray" set:html={answer}></p>
								</div>
							)
						})}
					</div>
				</div>
			))}
		</div>
	</section>

	<!-- Still Have Questions -->
	<section class="py-16 md:py-24 bg-lightgray">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-3xl font-bold mb-6 text-primary font-heading">STILL HAVE QUESTIONS?</h2>
			<p class="text-xl mb-8 max-w-3xl mx-auto">
				Can't find the answer you're looking for? Our team is here to help with any questions about our services.
			</p>
			<div class="flex flex-col sm:flex-row justify-center gap-4">
				<a
					href={`tel:${settings.phoneRaw}`}
					class="bg-accent hover:bg-accent/90 text-white font-bold py-3 px-8 rounded-md transition-colors"
				>
					Call {settings.phone}
				</a>
				<a
					href="/contact"
					class="bg-secondary hover:bg-secondary/90 text-white font-bold py-3 px-8 rounded-md transition-colors"
				>
					Contact Us
				</a>
			</div>
		</div>
	</section>

	<!-- Service Areas -->
	<ServiceAreas/>
</main>

<Footer/>

<style>
	/* FAQ Grid Styles */
	.masonry-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	@media (min-width: 768px) {
		.masonry-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	.masonry-item {
		height: 100%;
		transition: all 0.3s ease;
	}

	.masonry-item:hover {
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
	}
</style>
</body>
</html>
