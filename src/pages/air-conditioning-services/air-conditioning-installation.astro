						src="/images-optimized/services/ac-installation.webp"
						alt="HVAC technician installing an air conditioning unit"
						class="rounded-lg shadow-xl w-full h-auto object-cover"
						width="600"
						height="450"
						loading="lazy"
					/>
				</div>
			</div>
		</div>
	</section>

	<!-- Installation Options -->
